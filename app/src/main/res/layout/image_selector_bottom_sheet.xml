<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp">

    <Button
        android:id="@+id/txt_gallery"
        style="@style/BottomSheetItem"
        android:foreground="?android:attr/selectableItemBackgroundBorderless"
        android:gravity="start"
        android:textColor="@color/color_control_txt"
        android:drawableStart="@drawable/ic_baseline_image_24"
        android:text="@string/select_from_gallery"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/txt_camera"
        style="@style/BottomSheetItem"
        android:foreground="?android:attr/selectableItemBackgroundBorderless"
        android:gravity="start"
        android:textColor="@color/color_control_txt"
        android:drawableStart="@drawable/ic_baseline_photo_camera_24"
        android:text="@string/open_camera"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_gallery" />

</androidx.constraintlayout.widget.ConstraintLayout>